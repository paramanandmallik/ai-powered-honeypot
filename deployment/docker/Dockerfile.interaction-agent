FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    openssh-client \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY agents/ ./agents/
COPY config/ ./config/
COPY security/ ./security/
COPY honeypots/ ./honeypots/

# Create necessary directories
RUN mkdir -p /app/logs /app/data /app/metrics /app/sessions

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1
ENV AGENT_TYPE=interaction
ENV AGENT_NAME=interaction-agent

# Expose port for agent communication
EXPOSE 8003

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8003/health || exit 1

# Start the Interaction Agent
CMD ["python", "-m", "agents.interaction.interaction_agent"]