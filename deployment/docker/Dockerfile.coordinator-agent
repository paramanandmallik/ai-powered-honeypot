FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    docker.io \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY agents/ ./agents/
COPY config/ ./config/
COPY security/ ./security/
COPY honeypots/ ./honeypots/
COPY management/ ./management/

# Create necessary directories
RUN mkdir -p /app/logs /app/data /app/metrics

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1
ENV AGENT_TYPE=coordinator
ENV AGENT_NAME=coordinator-agent

# Expose port for agent communication
EXPOSE 8002

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8002/health || exit 1

# Start the Coordinator Agent
CMD ["python", "-m", "agents.coordinator.coordinator_agent"]